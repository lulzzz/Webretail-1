{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "files": [
    "ClientApp/app/app.module.ts",
    "ClientApp/app/modules/login/login.module.ts",
    "ClientApp/app/modules/account/account.module.ts",
    "ClientApp/app/modules/store/store.module.ts",
    "ClientApp/app/modules/brand/brand.module.ts",
    "ClientApp/app/modules/category/category.module.ts",
    "ClientApp/app/modules/attribute/attribute.module.ts",
    "ClientApp/app/modules/product/product.module.ts",
    "ClientApp/app/modules/causal/causal.module.ts",
    "ClientApp/main-aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}